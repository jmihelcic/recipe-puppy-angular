:host {
    display: block;
}

.recipe-tile {
    display: flex;
    flex-direction: row;
    width: 512px;
    padding: 16px;
    margin-bottom: 8px;
    border-radius: 4px;
    background: white;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
}

.recipe-image {
    width: 72px;
    height: 72px;
    margin-right: 16px;
    border-radius: 4px;
    background: #EEEEEE;
    color: #616161;
    font-size: 12px;
    line-height: 72px;
    text-align: center;
}

.recipe-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.recipe-icon {
    cursor: pointer;
    align-self: center;
    color: #E0E0E0;

    &:hover {
        color: #424242;
    }
}