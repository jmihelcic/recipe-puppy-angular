:host {
    display: block;
    padding: 8px;
}

.search-input {
    width: 100%;
    height: 42px;
    background: #ffffff;
    border-radius: 4px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);

    &:hover {
        background: #f1f3f4;
    }
}

input {
    border: none;
    width: 100%;
    padding: 0 16px;
    background: transparent;
    line-height: 42px;
    outline: none;
}