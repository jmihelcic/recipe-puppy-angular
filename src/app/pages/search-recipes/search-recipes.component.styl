:host {
    display: flex;
    width: 100%;
    height: 100%;
}

.page-left {
    z-index: 1;
    flex: 0 0 auto;
    width: 256px;
    height: 100%;
    background: #ffffff;
    box-shadow: 2px 0 4px rgba(0, 0, 0, 0.2);
}

.page-right {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
    background: #ff98002b;
}

.search-input-container {
    flex: 0 0 auto;
    height: 72px;
    padding: 0 24px;
}

.recipes-container {
    display: grid;
    grid-gap: 16px;
    justify-content: center;
    align-items: center;
    grid-template-columns: repeat(auto-fit, 512px);
    flex: 1;
    overflow: auto;
    padding: 0 24px;
}

.pagination-container {
    flex: 0 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 48px;
    padding: 0 24px;
    background: #ffffff;

    .pagination-page {
        width: 42px;
        height: 42px;
        line-height: 42px;
        text-align: center;
    }

    .pagination-button {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 42px;
        height: 42px;
        border-radius: 4px;
        cursor: pointer;

        &:hover {
            background: #E0E0E0;
        }
    }
}