:host {
    display: flex;
    width: 100%;
    height: 100%;
}

.page-left {
    z-index: 1;
    flex: 0 0 auto;
    width: 256px;
    height: 100%;
    background: #ffffff;
    box-shadow: 2px 0 4px rgba(0, 0, 0, 0.2);
}

.page-right {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
    background: #ff98002b;
}

.search-input-container {
    flex: 0 0 auto;
    height: 72px;
    padding: 0 24px;
}

.recipes-container {
    display: grid;
    grid-gap: 16px;
    justify-content: center;
    align-items: center;
    grid-template-columns: 512px 512px;
    flex: 1;
    overflow: auto;
    padding: 0 24px;
    opacity: 1;
    transition: opacity 150ms linear;

    &.hidden {
        opacity: 0.1;
    }
}

.pagination-container {
    flex: 0 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 48px;
    padding: 0 24px;
    background: #ffffff;

    .pagination-page {
        width: 42px;
        height: 42px;
        line-height: 42px;
        text-align: center;
    }

    .pagination-button {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 42px;
        height: 42px;
        border-radius: 4px;
        cursor: pointer;

        &:hover {
            background: #E0E0E0;
        }
    }
}

.loader {
    z-index: 1000;
    position: absolute;
    top: calc(50% - 24px);
    left: calc(50% + 128px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100px;
    height: 100px;
    background: #ffffff;
    border-radius: 16px;
    color: #EF6C00;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
    transform: translate3d(-50%, -50%, 0);
    opacity: 1;
    transition: transform 150ms ease-in-out, opacity 150ms linear, visibility 150ms linear;

    &.hidden {
        opacity: 0;
        transform: translate3d(-50%, -40%, 0);
        transition-delay: 500ms;
        visibility: hidden;
    }

    i {
        font-size: 48px;
    }

    .text {
        text-align: center;
        font-size: 14px;
    }
}

